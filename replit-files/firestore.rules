rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write projects
    match /projects/{projectId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write transactions
    match /transactions/{transactionId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write documents
    match /documents/{documentId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write deferred payments
    match /deferred_payments/{paymentId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write funds
    match /funds/{fundId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write expense types
    match /expense_types/{expenseTypeId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write ledger entries
    match /ledger_entries/{entryId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write activity logs
    match /activity_logs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write settings
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
  }
}