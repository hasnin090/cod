rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write their uploads
    match /uploads/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write documents
    match /documents/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write transaction attachments
    match /transactions/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow public read access to company assets
    match /assets/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}